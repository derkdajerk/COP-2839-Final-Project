@page
@model Workout_Log_Tracker_Trauner.Pages.Workouts.SummaryModel

@{
    ViewData["Title"] = "Workout Summary";
}

<h1>Workout Summary</h1>

<p>
    <a asp-page="Index">Back to List</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Muscle Group</th>
            <th>Workout Count</th>
            <th>Most Recent Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkoutSummaries)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MuscleGroup)</td>
                <td>@Html.DisplayFor(modelItem => item.WorkoutCount)</td>
                <td>@Html.DisplayFor(modelItem => item.MostRecentDate)</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.WorkoutSummaries.Count == 0)
{
    <p>No workout summaries available.</p>
}